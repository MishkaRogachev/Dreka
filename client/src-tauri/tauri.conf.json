{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1704",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "Dreka",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "mishka.rogachev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "macOS": {
                "minimumSystemVersion": "10.15"
            }
        },
        "security": {
            "csp": null
        },
        "windows": [{
            "fullscreen": false,
            "resizable": true,
            "title": "Dreka",
            "width": 1200,
            "height": 800
        }]
    }
}